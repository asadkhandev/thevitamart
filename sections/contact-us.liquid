{{ 'contact-us.css' | asset_url | stylesheet_tag }}
{{ 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css' | stylesheet_tag }}


    {% comment %} contact-page.liquid {% endcomment %}

     <div class="contact-us">
      <div class="page-width">
        <div class="contact-us-banner">
          <h2>{{ section.settings.banner_subheading }}</h2>
          <h1>{{ section.settings.banner_heading }}</h1>
          <hr>
          <p>{{ section.settings.banner_description }}</p>
          <div class="contact-banner-btns">
            <h3>{{ section.settings.quick_response_heading }}</h3>
            <div>
              {% for i in (1..3) %}
                {% assign link_setting = 'quick_link_' | append: i %}
                {% assign text_setting = 'quick_link_text_' | append: i %}
                {% assign icon_setting = 'quick_link_icon_' | append: i %}

                {% if section.settings[text_setting] != blank %}
                  <a href="{{ section.settings[link_setting] }}" class="primary-btn">
                    <div>
                      <i class="{{ section.settings[icon_setting] }} fa-lg btn-icon"></i>
                      <p>{{ section.settings[text_setting] }}</p>
                    </div>
                  </a>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>

        <div class="contact-us-form">
          <div class="form-wrapper">
            {% form 'contact' %}
              {% if form.posted_successfully? %}
                <p class="form-success">Thank you for your message!</p>
              {% endif %}

              {{ form.errors | default_errors }}

              <label for="ContactFormName">Name</label>
              <input type="text" id="ContactFormName" name="contact[name]" class="input-info">

              <label for="ContactFormPhone">Phone Number</label>
              <input type="tel" id="ContactFormPhone" name="contact[phone]" class="input-info">

              <label for="ContactFormEmail">Email <span class="required">*</span></label>
              <input type="email" id="ContactFormEmail" name="contact[email]" class="input-info" required>

              <label for="ContactFormMessage">Comment <span class="required">*</span></label>
              <textarea name="contact[body]" id="ContactFormMessage" class="input-text" required></textarea>

              <button type="submit" class="secondary-btn">SUBMIT</button>
            {% endform %}
          </div>

          <div class="contact-bg">&nbsp;</div>
        </div>
      </div>
    </div>

    <a href="mailto:{{ section.settings.business_email }}" class="email-btn">
      <div class="container">
        <span>{{ section.settings.business_label }}</span>
        <strong>{{ section.settings.business_email }}</strong>
      </div>
    </a>

   
