{{ 'contact-us.css' | asset_url | stylesheet_tag }}


    {% comment %} contact-page.liquid {% endcomment %}

     <div class="page-width">
     <div class="contactus-inner-wrapper">
       <div class="contactus-section">
        <div class="contactus-banner">
          <h2>{{ section.settings.banner_subheading }}</h2>
          <h1>{{ section.settings.banner_heading }}</h1>
          <hr>
          <p>{{ section.settings.banner_description }}</p>
          <div class="contact-banner-btns">
            <h3>{{ section.settings.quick_response_heading }}</h3>
            <div>
              {% for i in (1..3) %}
                {% assign link_setting = 'quick_link_' | append: i %}
                {% assign text_setting = 'quick_link_text_' | append: i %}
                {% assign icon_setting = 'quick_link_icon_' | append: i %}

                {% if section.settings[text_setting] != blank %}
                  <a href="{{ section.settings[link_setting] }}" class="p-btn">
                    <div>
                      <img class="contactus-btn-icons" src="{{ section.settings[icon_setting] | image_url: width: 25 }}" alt="{{ section.settings[text_setting] }}">
                      <p>{{ section.settings[text_setting] }}</p>
                    </div>
                  </a>
                {% endif %}
              {% endfor %}
            </div>
          </div>
        </div>

        <div class="contactus-form">
          <div class="contactus-form-wrapper">
            {% form 'contact' %}
              {%- if form.posted_successfully? -%}
                <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
                  {{- 'icon-success.svg' | inline_asset_content -}}
                  {{ 'templates.contact.form.post_success' | t }}
                </h2>
              {%- elsif form.errors -%}
                <div class="form__message">
                  <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
                    {{- 'icon-error.svg' | inline_asset_content -}}
                    {{ 'templates.contact.form.error_heading' | t }}
                  </h2>
                </div>
                <ul class="form-status-list caption-large" role="list">
                  <li>
                    <a href="#ContactForm-email" class="link">
                      {{ form.errors.translated_fields.email | capitalize }}
                      {{ form.errors.messages.email }}
                    </a>
                  </li>
                </ul>
              {%- endif -%}

              <label for="ContactFormName">Name <span class="required">*</span></label>
              <input type="text" id="ContactFormName" name="contact[name]" class="input-info" required>

              <label for="ContactFormPhone">Phone Number <span class="required">*</span></label>
              <input type="tel" id="ContactFormPhone" name="contact[phone]" class="input-info" required>

              <label for="ContactFormEmail">Email <span class="required">*</span></label>
              <input type="email" id="ContactFormEmail" name="contact[email]" class="input-info" required>

              <label for="ContactFormMessage">Comment <span class="required">*</span></label>
              <textarea name="contact[body]" id="ContactFormMessage" class="input-text" required></textarea>

              <button type="submit" class="s-btn">SUBMIT</button>
            {% endform %}
          </div>

          <div class="contact-bg">&nbsp;</div>
        </div>
      </div>
     </div>
    </div>

    <a href="mailto:{{ section.settings.business_email }}" class="button-email">
      <div class="container">
        <span>{{ section.settings.business_label }}</span>
        <strong>{{ section.settings.business_email }}</strong>
      </div>
    </a>

   
