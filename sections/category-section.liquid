{{ 'category-section.css' | asset_url | stylesheet_tag }}
<div class="category-section">
  <div class="container">
    <!-- Top heading and navigation -->
    <div class="category-top-section">
      <div class="category-heading">
        <p>{{ section.settings.heading_text }}</p>
      </div>
      <div class="category-btns">
        <a href="#" class="previous-btn">&nbsp;&nbsp;&nbsp;</a>
        <a href="#" class="next-btn">&nbsp;&nbsp;&nbsp;</a>
      </div>
    </div>

    <!-- Category carousel -->
    <div class="category-carousel">
      {% for block in section.blocks %}
        <div>
          <div class="category-box">
            {% if block.settings.category_link %}
              <a href="{{ block.settings.category_link }}">
                <img src="{{ block.settings.category_image | img_url: '300x300' }}" alt="{{ block.settings.category_name }}">
                <p>{{ block.settings.category_name }}</p>
              </a>
            {% else %}
              <img src="{{ block.settings.category_image | img_url: '300x300' }}" alt="{{ block.settings.category_name }}">
              <p>{{ block.settings.category_name }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
jQuery(function($) {
  function initCategoryCarousel($section) {
    var $carousel = $section.find('.category-carousel');

    if (!$carousel.length || $carousel.hasClass('slick-initialized')) return;

    // Initialize Slick
    $carousel.slick({
      slidesToShow: 7,   // show 7 slides
      slidesToScroll: 1,  // scroll 1 slide at a time
      infinite: true,
      arrows: false,
      dots: false,
      speed: 300,
      cssEase: 'linear'
    });

    // Prev/Next buttons
    $section.find('.previous-btn').off('click').on('click', function(e){
      e.preventDefault();
      $carousel.slick('slickPrev');
    });
    $section.find('.next-btn').off('click').on('click', function(e){
      e.preventDefault();
      $carousel.slick('slickNext');
    });
  }

  // Initialize all category sections on page load
  $('.category-section').each(function(){
    initCategoryCarousel($(this));
  });

  // Re-initialize in Shopify editor when section loads
  document.addEventListener('shopify:section:load', function(e){
    var $section = $(e.target).find('.category-section');
    if ($section.length) {
      setTimeout(function(){
        initCategoryCarousel($section);
      }, 50);
    }
  });
});
</script>




{% schema %}
{
  "name": "Category Section",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Search by Category"
    },
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category Box",
      "settings": [
        {
          "type": "image_picker",
          "id": "category_image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "category_name",
          "label": "Category Name"
        },
        {
          "type": "url",
          "id": "category_link",
          "label": "Category Link"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Category Section",
      "category": "Homepage"
    }
  ]
}
{% endschema %}