{{ 'category-section.css' | asset_url | stylesheet_tag }}
<div class="category-section">
  <div class="container">
    <!-- Top heading and navigation -->
    <div class="category-top-section">
      <div class="category-heading">
        <p>{{ section.settings.heading_text }}</p>
      </div>
      <div class="category-btns">
        <a href="#" class="previous-btn">&nbsp;&nbsp;&nbsp;</a>
        <a href="#" class="next-btn">&nbsp;&nbsp;&nbsp;</a>
      </div>
    </div>

    <!-- Category carousel -->
    <div class="category-carousel">
      {% for block in section.blocks %}
        <div>
          <div class="category-box">
            {% if block.settings.category_link %}
              <a href="{{ block.settings.category_link }}">
                <img src="{{ block.settings.category_image | img_url: '300x300' }}" alt="{{ block.settings.category_name }}">
                <p>{{ block.settings.category_name }}</p>
              </a>
            {% else %}
              <img src="{{ block.settings.category_image | img_url: '300x300' }}" alt="{{ block.settings.category_name }}">
              <p>{{ block.settings.category_name }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  function initCategoryCarousel(section) {
    const carousel = section.querySelector('.category-carousel');
    const prevBtn = section.querySelector('.previous-btn');
    const nextBtn = section.querySelector('.next-btn');
    
    // Simple check for jQuery and Slick
    if (!carousel || !window.jQuery || !jQuery.fn.slick) return;
    if (carousel.classList.contains('slick-initialized')) return;
    
    const $carousel = jQuery(carousel);
    
    // Minimal Slick config - won't mess with your CSS
    $carousel.slick({
      slidesToShow: 7,
      slidesToScroll: 1,
      infinite: true,
      arrows: false,
      dots: false,
      // This is key: Slick won't style anything

      // No animations that could conflict
      cssEase: 'linear',
      speed: 300,
      // No responsive configs
      responsive: []
    });

    // Simple button handlers
    if (prevBtn) {
      prevBtn.onclick = (e) => {
      e.preventDefault(); // <--- stops # from scrolling
      $carousel.slick('slickPrev');
    }
  }
    
    if (nextBtn) {
      nextBtn.onclick = (e) => {
      e.preventDefault();
      $carousel.slick('slickNext');
      }
  }

  // Initialize
  document.querySelectorAll('.category-section').forEach(initCategoryCarousel);
  
  // Shopify editor
  if (window.Shopify) {
    document.addEventListener('shopify:section:load', (e) => {
      const section = e.target.querySelector('.category-section') || e.target;
      if (section.classList.contains('category-section')) {
        setTimeout(() => initCategoryCarousel(section), 50);
      }
    });
  }
});
</script>



{% schema %}
{
  "name": "Category Section",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading Text",
      "default": "Search by Category"
    },
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category Box",
      "settings": [
        {
          "type": "image_picker",
          "id": "category_image",
          "label": "Category Image"
        },
        {
          "type": "text",
          "id": "category_name",
          "label": "Category Name"
        },
        {
          "type": "url",
          "id": "category_link",
          "label": "Category Link"
        }
      ]
    }
  ],
  "max_blocks": 20,
  "presets": [
    {
      "name": "Category Section",
      "category": "Homepage"
    }
  ]
}
{% endschema %}