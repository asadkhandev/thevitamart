{{ 'banner-section.css' | asset_url | stylesheet_tag }}
<div class="banner-section">
  <div class="container">

    <!-- Banner Text -->
    <div class="banner-text">
      <span>
        <h2>{{ section.settings.heading }}</h2>
        <p>{{ section.settings.subheading }}</p>
      </span>

      <strong>
        <a href="{{ section.settings.link_url }}">
          {{ section.settings.link_text }}
        </a>
      </strong>
    </div>

    <!-- Banner Images -->
    <div class="banners">
      <div class="left-banner">
        {% if section.settings.left_image %}
          <img src="{{ section.settings.left_image | img_url: 'master' }}" alt="Left banner">
        {% endif %}
      </div>

      <div class="right-banner">
        {% if section.settings.right_image %}
          <img src="{{ section.settings.right_image | img_url: 'master' }}" alt="Right banner">
        {% endif %}
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Two Banner Section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Trending Products"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subtitle",
      "default": "Best Sellings / New Arrivals"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Button Text",
      "default": "View all products"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Banner Image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Banner Image"
    }
  ],
  "presets": [
    {
      "name": "Two Banner Section",
      "category": "Homepage"
    }
  ]
}
{% endschema %}
