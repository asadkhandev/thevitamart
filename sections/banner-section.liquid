{{ 'banner-section.css' | asset_url | stylesheet_tag }}
{{ 'component-slider.css' | asset_url | stylesheet_tag }}
{{ 'multi_collections-section.css' | asset_url | stylesheet_tag }}

<div class="banner-section">
  <div class="container">

    <!-- Banner Text -->
    <div class="banner-text">
      <span>
        <h2>{{ section.settings.heading }}</h2>
        {% comment %} <p>{{ section.settings.subheading }}</p> {% endcomment %}
         <ul class="tabs-menu">
          <li class="tab-link active" data-tab="tab1">{{ collections[section.settings.collection_1].title }}</li>
          <li class="tab-space">|</li>
          <li class="tab-link" data-tab="tab2">{{ collections[section.settings.collection_2].title }}</li>
        </ul>
      </span>

      <strong>
        <a href="{{ section.settings.link_url }}">
          {{ section.settings.link_text }}
        </a>
      </strong>
    </div>


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .text-center .card-information,
  .text-center .card__information{
    text-align: center;
  }

{%- endstyle -%}

{%- unless section.settings.quick_add == 'none' -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
{%- endunless -%}

{%- if section.settings.quick_add == 'standard' -%}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- if section.settings.quick_add == 'bulk' -%}
  <script src="{{ 'quick-add-bulk.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quantity-popover.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'price-per-item.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'quick-order-list.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

<div class="banner-section-products">
  <div class="color-{{ section.settings.color_scheme }} isolate gradient">
    <div class="collection-tabs-section section-{{ section.id }}-padding">
      <div class="page-width">
        {%- if section.settings.title != blank -%}
          <div class="halo-block-header{% if section.settings.text_alignment == 'center' %} text-center{% endif %}{% if section.settings.text_alignment == 'left' %} text-left{% endif %}{% if section.settings.text_alignment == 'right' %} text-right{% endif %}">
            <h3 class="title">
              <span class="text">{{ section.settings.title }}</span>
            </h3>
          </div>
        {%- endif -%}

        {% comment %} <ul class="tabs-menu">
          <li class="tab-link active" data-tab="tab1">{{ collections[section.settings.collection_1].title }}</li>
          <li class="tab-space">/</li>
          <li class="tab-link" data-tab="tab2">{{ collections[section.settings.collection_2].title }}</li>
        </ul> {% endcomment %}

        <div class="tab-content{% if section.settings.text_alignment == 'center' %} text-center{% endif %}">
          <!-- Collection 1 -->
          <div id="tab1" class="tab-panel active">
            <div class="product-slider slider-collection-1">
              {% for product in collections[section.settings.collection_1].products limit: section.settings.products_to_show %}
                <div class="multi_slide">
                  {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: section.settings.image_ratio,
                    image_shape: section.settings.image_shape,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    section_id: section.id,
                    quick_add: section.settings.quick_add
                  %}
                </div>
              {% endfor %}
            </div>
          </div>

          <!-- Collection 2 -->
          <div id="tab2" class="tab-panel">
            <div class="product-slider slider-collection-2">
              {% for product in collections[section.settings.collection_2].products limit: section.settings.products_to_show %}
                <div class="multi_slide">
                  {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: section.settings.image_ratio,
                    image_shape: section.settings.image_shape,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    section_id: section.id,
                    quick_add: section.settings.quick_add
                  %}
                </div>
              {% endfor %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    
    // Initialize slick sliders
    function initSlickSlider(selector) {
      if (!$(selector).hasClass('slick-initialized')) {
        $(selector).slick({
          slidesToShow: 3,
          slidesToScroll: 1,
          autoplay: true,
          autoplaySpeed: 10000, // Set to 10 seconds
          dots: true,
          arrows: true,
          responsive: [
            { breakpoint: 1200, settings: { slidesToShow: 3, slidesToScroll: 3 } },
            { breakpoint: 768, settings: { slidesToShow: 2, slidesToScroll: 2 } },
            { breakpoint: 480, settings: { slidesToShow: 1, slidesToScroll: 1 } }
          ]
        });
      }
    }
    
    // Call on page load
    initSlickSlider('.slider-collection-1');
    initSlickSlider('.slider-collection-2');

    // Tab switcher logic
    {% comment %} document.querySelectorAll('.tab-link').forEach(link => {
      link.addEventListener('click', function() {
        document.querySelectorAll('.tab-link').forEach(l => l.classList.remove('active'));
        this.classList.add('active');
        const tab = this.dataset.tab;
        document.querySelectorAll('.tab-panel').forEach(panel => panel.classList.add('hidden'));
        document.getElementById(tab).classList.remove('hidden');
      });
    }); {% endcomment %}

    // Tab switch behavior
    document.querySelectorAll('.tab-link').forEach(function (tabLink) {
      tabLink.addEventListener('click', function () {
        const tabId = this.dataset.tab;

        // Remove active classes
        document.querySelectorAll('.tab-link').forEach(el => el.classList.remove('active'));
        document.querySelectorAll('.tab-panel').forEach(el => el.classList.remove('active'));

        // Add active class to selected
        this.classList.add('active');
        document.getElementById(tabId).classList.add('active');

        // Reposition slick in visible tab
        const slider = document.querySelector('#' + tabId + ' .slick-slider');
        if (slider && $(slider).hasClass('slick-initialized')) {
          $(slider).slick('setPosition');
        }
      });
    });
  });
</script>


    <!-- Banner Images -->
    <div class="banners">
      <div class="left-banner">
        {% if section.settings.left_image %}
          <img src="{{ section.settings.left_image | img_url: 'master' }}" alt="Left banner">
        {% endif %}
      </div>

      <div class="right-banner">
        {% if section.settings.right_image %}
          <img src="{{ section.settings.right_image | img_url: 'master' }}" alt="Right banner">
        {% endif %}
      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Trending Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Main Heading",
      "default": "Trending Products"
    },
    {
      "type": "text",
      "id": "subheading",
      "label": "Subtitle",
      "default": "Best Sellings / New Arrivals"
    },
    {
      "type": "text",
      "id": "link_text",
      "label": "Button Text",
      "default": "View all products"
    },
    {
      "type": "url",
      "id": "link_url",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "left_image",
      "label": "Left Banner Image"
    },
    {
      "type": "image_picker",
      "id": "right_image",
      "label": "Right Banner Image"
    },

    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Featured Collections"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "collection",
      "id": "collection_1",
      "label": "First Collection"
    },
    {
      "type": "collection",
      "id": "collection_2",
      "label": "Second Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 8
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image ratio",
      "default": "adapt",
      "options": [
        { "value": "adapt", "label": "Adapt" },
        { "value": "square", "label": "Square" }
      ]
    },
    {
      "type": "select",
      "id": "image_shape",
      "label": "Image shape",
      "default": "default",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "rounded", "label": "Rounded" }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "label": "Show secondary image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "quick_add",
      "label": "Enable quick add",
      "default": false
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Trending Section"
    },
    {
      "name": "Multi Collections",
      "category": "Homepage"
    }
  ]
}
{% endschema %}