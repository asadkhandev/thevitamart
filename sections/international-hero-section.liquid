{{ 'international-hero.css' | asset_url | stylesheet_tag }}
{{ 'international-responsive.css' | asset_url | stylesheet_tag }}

<div class="international-banner">
  <div class="container">
    <div class="international-banner-text">
      <h1>{{ section.settings.heading_1 }}</h1>
      <h2>{{ section.settings.heading_2 }}</h2>
      <div class="footprint-pill">
        <p class="continents">{{ section.settings.continents_text | default: "<span>6</span> Continents" }}</p>
        <p class="distributions">{{ section.settings.distributions_text | default: "<strong>100+</strong> Distribution centers" }}</p>
      </div>
    </div>
  </div>
 <div class="international-banner-img"
     style="width: 100%; height: 400px; background-repeat: repeat-x; background-size: auto 100%; background-position: bottom; margin-top: -20px; background-image: url({{ section.settings.background_image | image_url }});">
</div>


</div>

{% schema %}
{
  "name": "International Banner",
  "settings": [
    {
      "type": "text",
      "id": "heading_1",
      "label": "Heading 1",
      "default": "GLOBALLY ACTIVE IN <span>60+ COUNTRIES</span>"
    },
    {
      "type": "text",
      "id": "heading_2",
      "label": "Heading 2",
      "default": "OUR <strong>WORLDWIDE</strong> FOOTPRINT!"
    },
    {
      "type": "text",
      "id": "continents_text",
      "label": "Continents Text",
      "default": "<span>6</span> Continents"
    },
    {
      "type": "text",
      "id": "distributions_text",
      "label": "Distributions Text",
      "default": "<strong>100+</strong> Distribution centers"
    },
     {
  "type": "image_picker",
  "id": "background_image",
  "label": "Background Image"
}

  ],
  "presets": [
    {
      "name": "International Banner",
      "category": "International Section"
    }
  ]
}
{% endschema %}

<script>
        const banner = document.querySelector(".international-banner-img");
        let x = 0;
        const speed = 1.5;

        function animate() {
            x += speed;
            banner.style.backgroundPosition = `${x}px 0`;
            requestAnimationFrame(animate);
        }

        animate();
    </script>