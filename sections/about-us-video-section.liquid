{{ 'aboutus-video-section.css' | asset_url | stylesheet_tag }}
{{ 'about-us-responsive.css' | asset_url | stylesheet_tag }}

<div class="video-section">
  <div class="page-width">
    <div class="video-headings">
      <h1>{{ section.settings.video_heading_1 }}</h1>
      <h2>{{ section.settings.video_heading_2 }}</h2>
    </div>
    <video id="about-us-video"
      poster="{{ section.settings.video_poster }}"
      controls loop>
      <source src="{{ section.settings.video_url }}" type="video/mp4">
    </video>
  </div>
</div>

{% schema %}
{
  "name": "Video Section",
  "settings": [
    {
      "type": "header",
      "content": "Video Section"
    },
    {
      "type": "text",
      "id": "video_heading_1",
      "label": "Main Heading",
      "default": "NUTRIFACTOR"
    },
    {
      "type": "text",
      "id": "video_heading_2",
      "label": "Sub Heading",
      "default": "PAKISTAN'S NO.1 VITAMIN BRAND"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "image_picker",
      "id": "video_poster",
      "label": "Video Poster",
    }
  ],
  "presets": [
    {
      "name": "Video Section",
       "category": "About Us"
    }
  ]
}
{% endschema %}
