{{ 'about-us.css' | asset_url | stylesheet_tag }}

<div class="graph-section">
  <div class="container">
    <div class="graph-text">
      <p>{{ section.settings.graph_heading }}</p>
      <hr />
    </div>
    <div class="graph">
      {% if section.settings.graph_image %}
        <img src="{{ section.settings.graph_image | image_url }}" alt="graph animation" />
      {% endif %}
    </div>

    {% if section.blocks.size > 0 %}
    <div class="phone-graph">
      <div class="carousel">
        {% for block in section.blocks %}
          <div class="carousel-slide">
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.alt_text }}" />
            <p class="carousel-caption">{{ block.settings.caption }}</p>
          </div>
        {% endfor %}
      </div>

      <!-- Custom navigation buttons -->
      <button class="carousel-btn prev">&#10094;</button>
      <button class="carousel-btn next">&#10095;</button>
    </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Custom Carousel",
  "settings": [
    {
      "type": "text",
      "id": "graph_heading",
      "label": "Graph Heading",
      "default": "From Nature to you"
    },
    {
      "type": "image_picker",
      "id": "graph_image",
      "label": "Graph Image"
    }
  ],
  "blocks": [
    {
      "type": "carousel_image",
      "name": "Carousel Image",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "alt_text", "label": "Alt Text" },
        { "type": "text", "id": "caption", "label": "Caption" }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    { "name": "Custom Carousel", "category": "Custom" }
  ]
}
{% endschema %}

<!-- Slick Slider CSS & JS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css"/>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css"/>
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<script>
  function initPhoneGraphCarousel() {
    $('.phone-graph .carousel').not('.slick-initialized').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 3000,
      dots: true,
      arrows: false,
      responsive: [
        { breakpoint: 1024, settings: { slidesToShow: 2 } },
        { breakpoint: 768,  settings: { slidesToShow: 1 } }
      ]
    });

    // Bind custom prev/next buttons
    $('.phone-graph .carousel-btn.prev').off('click').on('click', function(){
      $(this).closest('.phone-graph').find('.carousel').slick('slickPrev');
    });
    $('.phone-graph .carousel-btn.next').off('click').on('click', function(){
      $(this).closest('.phone-graph').find('.carousel').slick('slickNext');
    });
  }

  $(document).ready(function(){
    initPhoneGraphCarousel();
  });

  // Reinitialize after section load (Shopify editor)
  $(document).on('shopify:section:load', function(){
    initPhoneGraphCarousel();
  });
</script>
