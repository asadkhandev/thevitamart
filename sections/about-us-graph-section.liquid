{{ 'about-us.css' | asset_url | stylesheet_tag }}

<div class="graph-section">
  <div class="container">
    <div class="graph-text">
      <p>{{ section.settings.graph_heading }}</p>
      <hr />
    </div>
    <div class="graph">
      {% if section.settings.graph_image %}
        <img src="{{ section.settings.graph_image | image_url }}" alt="graph animation" />
      {% endif %}
    </div>

    <div class="phone-graph">
      <div class="carousel">
        {% for block in section.blocks %}
          <div class="carousel-slide {% if forloop.first %}active{% endif %}">
            <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.alt_text }}" />
            <p class="carousel-caption">{{ block.settings.caption }}</p>
          </div>
        {% endfor %}

        <!-- Navigation buttons -->
        <button class="carousel-btn prev">&#10094;</button>
        <button class="carousel-btn next">&#10095;</button>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "Custom Carousel",
  "settings": [
    {
      "type": "text",
      "id": "graph_heading",
      "label": "Graph Heading",
      "default": "From Nature to you"
    },
    {
      "type": "image_picker",
      "id": "graph_image",
      "label": "Graph Image"
    }
  ],
  "blocks": [
    {
      "type": "carousel_image",
      "name": "Carousel Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [
    {
      "name": "Custom Carousel",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<!-- jQuery + Slick JS -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>

<script>
  $(document).ready(function(){
    $('.carousel').slick({
      slidesToShow: 3,
      slidesToScroll: 1,
      autoplay: true,
      autoplaySpeed: 3000,
      dots: true,
      arrows: true,
      prevArrow: '<button class="carousel-btn prev">&#10094;</button>',
      nextArrow: '<button class="carousel-btn next">&#10095;</button>',
      responsive: [
        { breakpoint: 1024, settings: { slidesToShow: 2 } },
        { breakpoint: 768, settings: { slidesToShow: 1 } }
      ]
    });
  });
</script>
    