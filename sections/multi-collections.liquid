{{ 'component-slider.css' | asset_url | stylesheet_tag }}

<div class="collection-tabs-section page-width">
  {% if section.settings.heading != blank %}
    <div class="section-header text-center">
      <h2>{{ section.settings.heading }}</h2>
    </div>
  {% endif %}

  <ul class="tabs-menu flex justify-center gap-4 mb-6">
    <li class="tab-link active" data-tab="tab1">{{ collections[section.settings.collection_1].title }}</li>
    <li class="tab-link" data-tab="tab2">{{ collections[section.settings.collection_2].title }}</li>
  </ul>

  <div class="tab-content">
    <!-- Collection 1 -->
    <div id="tab1" class="tab-panel active">
      <div class="product-slider slider-collection-1">
        {% for product in collections[section.settings.collection_1].products limit: section.settings.products_to_show %}
          {% render 'card-product',
            card_product: product,
            media_aspect_ratio: section.settings.image_ratio,
            image_shape: section.settings.image_shape,
            show_secondary_image: section.settings.show_secondary_image,
            show_vendor: section.settings.show_vendor,
            show_rating: section.settings.show_rating,
            section_id: section.id,
            quick_add: section.settings.quick_add
          %}
        {% endfor %}
      </div>
    </div>

    <!-- Collection 2 -->
    <div id="tab2" class="tab-panel hidden">
      <div class="product-slider slider-collection-2">
        {% for product in collections[section.settings.collection_2].products limit: section.settings.products_to_show %}
          {% render 'card-product',
            card_product: product,
            media_aspect_ratio: section.settings.image_ratio,
            image_shape: section.settings.image_shape,
            show_secondary_image: section.settings.show_secondary_image,
            show_vendor: section.settings.show_vendor,
            show_rating: section.settings.show_rating,
            section_id: section.id,
            quick_add: section.settings.quick_add
          %}
        {% endfor %}
      </div>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Tab switcher logic
    document.querySelectorAll('.tab-link').forEach(link => {
      link.addEventListener('click', function() {
        document.querySelectorAll('.tab-link').forEach(l => l.classList.remove('active'));
        this.classList.add('active');
        const tab = this.dataset.tab;
        document.querySelectorAll('.tab-panel').forEach(panel => panel.classList.add('hidden'));
        document.getElementById(tab).classList.remove('hidden');
      });
    });

    // Initialize slick sliders
    $('.slider-collection-1, .slider-collection-2').slick({
      slidesToShow: 4,
      slidesToScroll: 1,
      autoplay: false,
      dots: false,
      arrows: true,
      responsive: [
        { breakpoint: 1200, settings: { slidesToShow: 3 } },
        { breakpoint: 768, settings: { slidesToShow: 2 } },
        { breakpoint: 480, settings: { slidesToShow: 1 } }
      ]
    });
  });
</script>

<style>
  .tab-link.active {
    font-weight: bold;
    border-bottom: 2px solid black;
  }

  .tab-panel.hidden {
    display: none;
  }
</style>

{
  "name": "Multi Collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Featured Collections"
    },
    {
      "type": "collection",
      "id": "collection_1",
      "label": "First Collection"
    },
    {
      "type": "collection",
      "id": "collection_2",
      "label": "Second Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "label": "Products to show",
      "min": 2,
      "max": 12,
      "step": 1,
      "default": 8
    },
    {
      "type": "select",
      "id": "image_ratio",
      "label": "Image ratio",
      "default": "adapt",
      "options": [
        { "value": "adapt", "label": "Adapt" },
        { "value": "square", "label": "Square" }
      ]
    },
    {
      "type": "select",
      "id": "image_shape",
      "label": "Image shape",
      "default": "default",
      "options": [
        { "value": "default", "label": "Default" },
        { "value": "rounded", "label": "Rounded" }
      ]
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "label": "Show secondary image",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "label": "Show rating",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "quick_add",
      "label": "Enable quick add",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Multi Collections"
    }
  ]
}
