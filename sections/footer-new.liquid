{{ 'footer-new.css' | asset_url | stylesheet_tag }}
<footer class="custom-footer">
  <div class="container">
    
    <!-- TOP SECTION -->
    <div class="footer-top">
      <div>
        {% if section.settings.footer_logo %}
          <img src="{{ section.settings.footer_logo | img_url: '200x' }}" alt="Footer Logo">
        {% endif %}
        <p>{{ section.settings.footer_tagline }}</p>
      </div>

      <div>
        {% if section.settings.phone_icon %}
          <img src="{{ section.settings.phone_icon | img_url: '100x' }}" alt="Call Icon">
        {% endif %}
        <p>{{ section.settings.phone_text }}</p>
      </div>

      <div>
        {% if section.settings.email_icon %}
          <img src="{{ section.settings.email_icon | img_url: '100x' }}" alt="Email Icon">
        {% endif %}
        <p>{{ section.settings.email_text }}</p>
      </div>
    </div>


    <!-- MIDDLE MENUS -->
    <div class="footer-middle">

      <!-- Column 1 -->
      <div>
        <h2>{{ section.settings.menu1_title }}</h2>
        <ul>
          {% for link in linklists[section.settings.menu1].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Column 2 -->
      <div>
        <h2>{{ section.settings.menu2_title }}</h2>
        <ul>
          {% for link in linklists[section.settings.menu2].links %}
            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
          {% endfor %}
        </ul>
      </div>

      <!-- Column 3 -->
      <div>
        <h2>{{ section.settings.menu3_title }}</h2>
        <ul>
          {% for link in linklists[section.settings.menu3].links %}
            <li>
              <a href="{{ link.url }}" class="green-links">{{ link.title }}</a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <h2>{{ section.settings.subscribe_title }}</h2>
        <p>{{ section.settings.subscribe_text }}</p>

          <div class="input-form-wrapper">
            {% form 'customer', id: 'footer-newsletter', class: 'searchbar-input' %}
        
              <input type="hidden" name="contact[tags]" value="newsletter">

              <input 
                type="email" 
                name="contact[email]" 
                placeholder="Email" 
                value="{{ form.email }}"
                required
              >

              {% if section.settings.subscribe_arrow %}
                <button type="submit" class="arrow-submit">
                  <img src="{{ section.settings.subscribe_arrow | img_url: '40x' }}" class="input-arrow">
                </button>
              {% endif %}

              {% if form.errors %}
                <p class="newsletter-error">{{ form.errors.messages.email }}</p>
              {% endif %}

              {% if form.posted_successfully? %}
                <p class="newsletter-success">Thanks for subscribing!</p>
              {% endif %}

            {% endform %}
          </div>
      </div>
    </div>


    <!-- BOTTOM -->
    <div class="footer-bottom">
      <div class="social-icons">
        {% for block in section.blocks %}
          <div>
            <a href="{{ block.settings.url }}" target="_blank">
              <img src="{{ block.settings.icon | img_url: '80x' }}" alt="Social icon">
            </a>
          </div>
        {% endfor %}
      </div>

      <div>
        <p>Â© {{ 'now' | date: "%Y" }} All Rights Reserved {{ shop.name }}</p>
      </div>
    </div>

  </div>
</footer>


{% schema %}
{
  "name": "Custom Footer",
  "settings": [
    {
      "type": "image_picker",
      "id": "footer_logo",
      "label": "Footer Logo"
    },
    {
      "type": "text",
      "id": "footer_tagline",
      "label": "Footer Tagline",
      "default": "No.1 Vitamin Brand, Empowering Wellness Globally."
    },

    {
      "type": "image_picker",
      "id": "phone_icon",
      "label": "Phone Icon"
    },
    {
      "type": "text",
      "id": "phone_text",
      "label": "Phone Text",
      "default": "Call us anytime"
    },

    {
      "type": "image_picker",
      "id": "email_icon",
      "label": "Email Icon"
    },
    {
      "type": "text",
      "id": "email_text",
      "label": "Email Text",
      "default": "info@thevitamart.com"
    },

    {
      "type": "text",
      "id": "menu1_title",
      "label": "Menu 1 Title",
      "default": "The Vitamart"
    },
    {
      "type": "link_list",
      "id": "menu1",
      "label": "Menu 1 Navigation"
    },

    {
      "type": "text",
      "id": "menu2_title",
      "label": "Menu 2 Title",
      "default": "Shop"
    },
    {
      "type": "link_list",
      "id": "menu2",
      "label": "Menu 2 Navigation"
    },

    {
      "type": "text",
      "id": "menu3_title",
      "label": "Menu 3 Title",
      "default": "Help & Terms"
    },
    {
      "type": "link_list",
      "id": "menu3",
      "label": "Menu 3 Navigation"
    },

    {
      "type": "text",
      "id": "subscribe_title",
      "label": "Subscribe Title",
      "default": "Subscribe to our emails"
    },
    {
      "type": "textarea",
      "id": "subscribe_text",
      "label": "Subscribe Text",
      "default": "Receive the latest updates about our products and promotions."
    },
    {
      "type": "image_picker",
      "id": "subscribe_arrow",
      "label": "Arrow Icon"
    }
  ],

  "blocks": [
    {
      "type": "social",
      "name": "Social Icon",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Social Link"
        }
      ]
    }
  ],

  "presets": [
    {
      "name": "New Footer",
      "category": "Homepage"
    }
  ]
}
{% endschema %}