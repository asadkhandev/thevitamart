{{ 'discount-section.css' | asset_url | stylesheet_tag }}
<div class="discount-section">
  <div class="container">

    <div class="discount-text">
      <span>
        <h2>{{ section.settings.heading }}</h2>
      </span>

      <strong>
        <a href="{{ section.settings.button_link }}">
          {{ section.settings.button_text }}
        </a>
      </strong>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Discount / Offer Header",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Latest Offers & Discounts"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "View all products"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "presets": [
    {
      "name": "Discount Header Section",
      "category": "Homepage"
    }
  ]
}
{% endschema %}