{{ 'why-choose.css' | asset_url | stylesheet_tag }}
<div class="why-choose-section">
  <div class="container">

    <!-- LEFT SIDE -->
    <div class="why-choose-left-section">
      <div class="why-choose-left-inner">
        
        <!-- Main Heading -->
        <h2>{{ section.settings.left_heading }}</h2>

        <!-- Subheading Image -->
        {% if section.settings.left_subheading_image %}
          <img src="{{ section.settings.left_subheading_image | img_url: 'master' }}" class="text-image" alt="Subheading">
        {% endif %}

        <!-- Description -->
        <p>{{ section.settings.left_description }}</p>

      </div>
    </div>

    <!-- RIGHT SIDE -->
    <div class="why-choose-right-section">
      <div class="why-choose-right-inner">

        <!-- Right Heading -->
        <h2>{{ section.settings.right_heading }}</h2>

        <!-- ICON BLOCKS -->
        {% for block in section.blocks %}
          {% if block.type == 'icon_text' %}
            <div class="icon-box-section">

              <div class="icon-box">
                {% if block.settings.icon_image %}
                  <img src="{{ block.settings.icon_image | img_url: '80x' }}" alt="icon">
                {% endif %}
              </div>

              <div class="icon-text">
                <p>{{ block.settings.icon_text }}</p>
              </div>

            </div>
          {% endif %}
        {% endfor %}

        <!-- Bottom Decorative Image -->
        {% if section.settings.bottom_text_image %}
          <div class="text-image">
            <img src="{{ section.settings.bottom_text_image | img_url: 'master' }}" alt="Trust text">
          </div>
        {% endif %}

      </div>
    </div>

  </div>
</div>

{% schema %}
{
  "name": "Why Choose Us Section",
  "settings": [
    {
      "type": "text",
      "id": "left_heading",
      "label": "Left Heading",
      "default": "Why Choose The Vitamart"
    },
    {
      "type": "image_picker",
      "id": "left_subheading_image",
      "label": "Left Subheading Image"
    },
    {
      "type": "textarea",
      "id": "left_description",
      "label": "Left Description",
      "default": "When you shop at The Vitamart, you’re not just buying vitamins — you’re joining a community that values authenticity, transparency, and trust."
    },
    {
      "type": "text",
      "id": "right_heading",
      "label": "Right Heading",
      "default": "Here’s what makes us different:"
    },
    {
      "type": "image_picker",
      "id": "bottom_text_image",
      "label": "Bottom Text Image (Right Side)"
    }
  ],
  "blocks": [
    {
      "type": "icon_text",
      "name": "Icon + Text Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        },
        {
          "type": "richtext",
          "id": "icon_text",
          "label": "Text",
          "default": "<p><strong>Authorized U.S. Distributor</strong> of Vitamart®</p>"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Choose Us Section",
      "category": "Homepage"
    }
  ]
}
{% endschema %}