{{ 'why-choose.css' | asset_url | stylesheet_tag }}
<div class="why-choose-section">
  <div class="container">
    <div class="why-choose-left-section">
      <div class="why-choose-left-inner">
        <h2>{{ section.settings.main_title }}</h2>

        {% if section.settings.subtitle %}
          <p class="borel">{{ section.settings.subtitle }}</p>
        {% endif %}

        {% if section.settings.description %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
      </div>
    </div>

    <div class="why-choose-right-section">
      <div class="why-choose-right-inner">
        <h2>{{ section.settings.right_title }}</h2>

        {% for block in section.blocks %}
          <div class="icon-box-section">
            <div class="icon-box">
              {% if block.settings.icon %}
                <img
                  src="{{ block.settings.icon | img_url: '200x' }}"
                  alt="{{ block.settings.icon.alt | escape }}"
                  loading="lazy"
                >
              {% endif %}
            </div>

            <div class="icon-text">
              <p>{{ block.settings.text }}</p>
            </div>
          </div>
        {% endfor %}

        {% if section.settings.bottom_tagline %}
          <div class="borel-2">
            <p>{{ section.settings.bottom_tagline }}</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Why Choose Section",
  "settings": [
    {
      "type": "text",
      "id": "main_title",
      "label": "Left Title",
      "default": "Why Choose The Vitamart"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle (Borel text)",
      "default": "Your Wellness, Our Commitment"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Left Paragraph",
      "default": "When you shop at The Vitamart, you’re not just buying vitamins — you’re joining a community that values authenticity, transparency, and trust."
    },
    {
      "type": "text",
      "id": "right_title",
      "label": "Right Title",
      "default": "Here’s what makes us different:"
    },
    {
      "type": "text",
      "id": "bottom_tagline",
      "label": "Bottom Tagline (Borel text)",
      "default": "Trusted nutrition, delivered with care."
    }
  ],

  "blocks": [
    {
      "type": "item",
      "name": "Why Choose Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon Image"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "<strong>Authorized U.S. Distributor</strong> of Vitamart®"
        }
      ]
    }
  ],

  "max_blocks": 10,

  "presets": [
    {
      "name": "Why Choose Section",
      "category": "Custom Sections"
    }
  ]
}
{% endschema %}